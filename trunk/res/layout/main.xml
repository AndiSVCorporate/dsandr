<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/menubackt">

<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/start" android:background="#00000000" android:layout_gravity="center_horizontal" android:layout_marginTop="20dip" android:id="@+id/start"></ImageButton>
<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#00000000" android:src="@drawable/settings" android:layout_margin="20dip" android:id="@+id/settings"></ImageButton>
<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#00000000" android:src="@drawable/more" android:layout_gravity="right" android:layout_marginRight="20dip" android:id="@+id/more"></ImageButton>
</LinearLayout>
