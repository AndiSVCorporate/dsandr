    android:layout_height="fill_parent" android:background="#00000000">

<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#00000000" android:id="@+id/start" android:layout_marginTop="5dip" android:layout_gravity="right" android:src="@drawable/menu_start"></ImageButton>
<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#00000000" android:id="@+id/settings" android:layout_margin="5dip" android:src="@drawable/menu_settings"></ImageButton>
<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#00000000" android:layout_gravity="right" android:id="@+id/more" android:layout_marginRight="20dip" android:src="@drawable/menu_more"></ImageButton>
